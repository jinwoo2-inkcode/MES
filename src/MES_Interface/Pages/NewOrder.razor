  </style>
</head>
<body>

  <h1>Text Input Boxes</h1>

  <div class="input-group">
    <label for="PRODUCT_ID">Product ID: </label>
    <input type="text" id="PRODUCT_ID" placeholder="Product ID">
  </div>

  <div class="input-group">
    <label for="PRODUCT_DESC">Product Description: </label>
    <input type="text" id="PRODUCT_DESC" placeholder="Product Description">
  </div>

  <div class="input-group">
    <label for="DEMAND_ORDER_NBR">Demand Order Number: </label>
    <input type="text" id="DEMAND_ORDER_NBR" placeholder="Demand Order Number">
  </div>
  
  <div class="input-group">
    <label for="MAKE_QTY">Make Quantity: </label>
    <input type="number" id="MAKE_QTY" placeholder="Make Quantity">
  </div>
  
  <div class="input-group">
    <label for="DUE_DATE">Due Date: </label>
    <input type="datetime-local" id="DUE_DATE" placeholder="Due Date">
  </div>

  <div class="input-group">
    <label for="START_DATE">START DATE: </label>
    <input type="datetime-local" id="START_DATE" placeholder="START DATE">
  </div>


  <div class="input-group">
    <label for="END_DATE">End Date: </label>
    <input type="datetime-local" id="END_DATE" placeholder="End Date">
  </div>


  <div class="input-group">
    <label for="SHIPPING_LOC">SHIPPING LOCATION: </label>
    <input type="text" id="SHIPPING_LOC" placeholder="SHIPPING LOCATION">
  </div>


  <div class="input-group">
    <label for="MFG_ORDER_NBR">MFG ORDER NBR: </label>
    <input type="text" id="MFG_ORDER_NBR" placeholder="MFG ORDER NBR">
  </div>

  <button onclick="submitForm()">Add</button>

  <script>
    function submitForm() {
      const PRODUCT_ID = document.getElementById('PRODUCT_ID').value;
      const PRODUCT_DESC = document.getElementById('PRODUCT_DESC').value;
      const DEMAND_ORDER_NBR = document.getElementById('DEMAND_ORDER_NBR').value;
      const MAKE_QTY = document.getElementById('MAKE_QTY').value;
      const DUE_DATE = document.getElementById('DUE_DATE').value;
      const START_DATE = document.getElementById('START_DATE').value;
      const END_DATE = document.getElementById('END_DATE').value;
      const SHIPPING_LOC = document.getElementById('SHIPPING_LOC').value;
      const MFG_ORDER_NBR = document.getElementById('MFG_ORDER_NBR').value;

      fetch("http://localhost:5100/load/StartOrder",{
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          PRODUCT_ID: PRODUCT_ID,
          PRODUCT_DESC: PRODUCT_DESC,
          DEMAND_ORDER_NBR: DEMAND_ORDER_NBR,
          MAKE_QTY: MAKE_QTY,
          DUE_DATE: DUE_DATE,
          START_DATE: START_DATE,
          END_DATE: END_DATE,
          SHIPPING_LOC: SHIPPING_LOC,
          MFG_ORDER_NBR: MFG_ORDER_NBR
        }).then(response => response.json())
            .then(data => console.log(data))
            .catch(error => console.error('Error:', error))
      });

      alert("Order Added Successfully");
    }
  </script>

</body>
</html>



